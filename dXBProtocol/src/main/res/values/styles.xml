<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppSettingsTheme">
        <item name="android:windowTitleSize">34dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="AppTheme">
        <item name="android:windowTitleSize">50dip</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
        <item name="android:windowBackground">@drawable/app_bg_gradient</item>
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">@drawable/titlebar_gradient</item>
    </style>

    <style name="app_button" parent="@android:Widget.Button">
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/login_button</item>
    </style>

    <style name="app_button_normal" parent="app_button">
        <item name="android:width">100dip</item>
    </style>

    <style name="profile_text_title" parent="@android:style/TextAppearance">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="app_title_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="app_title_text_small" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="profile_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="title_text" parent="@android:style/TextAppearance">
        <item name="android:background">@color/title_text_bg</item>
        <item name="android:textColor">@color/title_text_fg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">5dip</item>
        <!-- <item name="android:paddingTop">5dip</item> -->
        <item name="android:height">30dip</item>
    </style>

    <style name="sub_title_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/sub_title_text_fg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="label_text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/label_text_fg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="label_text_no_item" parent="label_text">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="sub_label_text" parent="label_text">
        <item name="android:textColor">@color/label_text_fg</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="normal_text" parent="label_text">
        <item name="android:textColor">@color/label_text_fg</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="rounded_edittext">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="rounded_edittext_big">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:textSize">17sp</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>

    <style name="rounded_searchtext">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    
        <style name="CustomShowcaseTheme2" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#663d4353</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
         <item name="sv_detailTextAppearance">@style/Customdetail</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#ffffff</item>
    </style>
        <style name="Customdetail" parent="TextAppearance.ShowcaseView.Detail">
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>