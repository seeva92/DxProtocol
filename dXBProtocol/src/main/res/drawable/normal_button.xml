<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<item android:state_pressed="true">
		<shape>
			<gradient android:startColor="@color/button_dark" android:endColor="@color/button_light"
				android:angle="270" />
			<stroke android:width="3dp" android:color="@color/button_stroke" />
			<corners android:radius="5dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>

	<item android:state_focused="true">
		<shape>
			<gradient android:endColor="@color/button_dark" android:startColor="@color/button_dark"
				android:centerColor="@color/button_dark" android:angle="270" />
			<stroke android:width="3dp" android:color="@color/button_stroke" />
			<corners android:radius="4dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>

	<item>
		<shape>
			<gradient android:startColor="@color/button_light" android:endColor="@color/button_dark"
				android:angle="270" />
			<stroke android:width="3dp" android:color="@color/button_stroke" />
			<corners android:radius="4dp" />
			<padding android:left="10dp" android:top="10dp"
				android:right="10dp" android:bottom="10dp" />
		</shape>
	</item>
</selector>
