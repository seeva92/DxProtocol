<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true"><shape>
            <gradient android:angle="270" android:centerColor="#986d31" android:endColor="#986d31" android:startColor="#986d31" />

            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />

            <stroke android:width="1dp" android:color="#986d31" />
        </shape></item>
    <item android:state_checked="false"><shape>
            <gradient android:angle="270" android:centerColor="#FFFFFF" android:endColor="#FFFFFF" android:startColor="#FFFFFF" />

            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp" />

            <stroke android:width="1dp" android:color="#986d31" />
        </shape></item>

</selector>